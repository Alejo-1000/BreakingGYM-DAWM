<mah:MetroWindow x:Class="BreakingGymUI.Membresia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="Membresia" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnGuardar" Content="" Margin="474,348,276,38" BorderBrush="{x:Null}" Click="BtnGuardar_Click" Width="50" Height="50">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="BtnModificar" Content="" Margin="692,346,60,38" BorderBrush="{x:Null}" Click="BtnModificar_Click" Height="50" Width="50" Visibility="Collapsed" >
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>

        </Button>
        <DataGrid x:Name="DataMembresia" HorizontalAlignment="Left" Height="241" Margin="33,174,0,0" VerticalAlignment="Top" Width="347" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataMembresia_SelectionChanged"/>
        <Button x:Name="BtnEliminar" Content="" HorizontalAlignment="Left" Height="50" Margin="584,348,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}" Click="BtnEliminar_Click" Visibility="Collapsed" >
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>

        </Button>
        <Button x:Name="BtnRefrescar" Content="" HorizontalAlignment="Left" Height="33" Margin="47,111,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.461,0.91" BorderBrush="{x:Null}" Click="BtnRefrescar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="BtnBuscar" Content="" HorizontalAlignment="Left" Height="34" Margin="344,107,0,0" VerticalAlignment="Top" Width="36" BorderBrush="{x:Null}" Click="BtnBuscar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>

        </Button>
        <TextBox x:Name="TxtBuscarMembresia" HorizontalAlignment="Left" Height="21" Margin="108,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196"/>
        <Label x:Name="BuscarMembresía" Content="Buscar Membresía" HorizontalAlignment="Left" Height="30" Margin="118,77,0,0" VerticalAlignment="Top" Width="156" AutomationProperties.Name="" FontFamily="Arial Rounded MT Bold" FontSize="14" FontWeight="Medium" Foreground="White"/>
        <Button x:Name="BtnVolver" Content="" HorizontalAlignment="Left" Height="43" Margin="746,10,0,0" VerticalAlignment="Top" Width="44" BorderBrush="{x:Null}" Click="BtnVolver_Click">
            <Button.Background>
                <ImageBrush ImageSource="/regreso.png"/>
            </Button.Background>

        </Button>
        <Label Content="Membresía" HorizontalAlignment="Left" Height="83" Margin="318,0,0,0" VerticalAlignment="Top" Width="354" FontSize="36" Foreground="White" FontFamily="Arial Rounded MT Bold"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="22" Margin="593,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="26" Margin="593,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175" />
        <TextBox x:Name="txtDuracion" HorizontalAlignment="Left" Height="26" Margin="593,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="26" Margin="593,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Height="28" Margin="485,106,0,0" VerticalAlignment="Top" Width="69" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Servicio" HorizontalAlignment="Left" Height="28" Margin="486,148,0,0" VerticalAlignment="Top" Width="69" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14" RenderTransformOrigin="0.517,0.073"/>
        <Label Content="Precio" HorizontalAlignment="Left" Height="28" Margin="486,190,0,0" VerticalAlignment="Top" Width="70" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14" RenderTransformOrigin="0.821,0.335"/>
        <Label Content="Duracion&#xD;&#xA;" HorizontalAlignment="Left" Height="28" Margin="486,230,0,0" VerticalAlignment="Top" Width="74" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Descripción&#xD;&#xA;" HorizontalAlignment="Left" Height="28" Margin="485,274,0,0" VerticalAlignment="Top" Width="94" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <ComboBox x:Name="CbxIdServicio" HorizontalAlignment="Left" Height="14" Margin="594,148,0,0" VerticalAlignment="Top" Width="174" SelectionChanged="CbxIdServicio_SelectionChanged"/>
        <TextBox x:Name="TxtId" HorizontalAlignment="Left" Margin="272,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="32" Height="16" TextChanged="TxtId_TextChanged" VerticalScrollBarVisibility="Visible" Visibility="Collapsed"/>

        <Menu HorizontalAlignment="Left" Height="43" Margin="14,6,0,0" VerticalAlignment="Top" Width="47" Background="{x:Null}">
            <MenuItem Header="" Width="48" Height="41">
                <MenuItem.Background>
                    <ImageBrush ImageSource="/printer.png"/>
                </MenuItem.Background>
                <MenuItem x:Name="btnCargar"  Header="Cargar Archivo" Background="#FF28628C" Click="btnCargar_Click"/>
                <MenuItem x:Name="btnImprimir" Header="Imprimir" Background="#FF28628C" Click="btnImprimir_Click" />
            </MenuItem>

        </Menu>
        <Button x:Name="BtnLimpiar" Content="" HorizontalAlignment="Left" Height="40" Margin="385,373,0,0" VerticalAlignment="Top" Width="40" BorderBrush="{x:Null}" Click="BtnLimpiar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/escoba.png"/>
            </Button.Background>
        </Button>


    </Grid>
</mah:MetroWindow>